<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.MergedMapFragment">

    <org.osmdroid.views.MapView
        android:id="@+id/fragment_merged_mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp" />

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/fragment_merged_db_fab"
        android:layout_width="wrap_content"
        android:layout_height="88dp"
        android:layout_above="@+id/fragment_merged_fab"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-15dp"
        android:layout_marginEnd="17dp"
        app:elevation="6dp"
        app:fab_colorNormal="@color/colorAccent"
        app:fab_icon="@drawable/ic_settings_accent"
        app:fab_labelStyle="@style/menu_labels_style"
        app:fab_size="mini"
        app:pressedTranslationZ="12dp" />

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/fragment_merged_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        app:elevation="6dp"
        app:fab_colorNormal="@color/colorAccent"
        app:fab_icon="@drawable/ic_merge_primary_24dp"
        app:fab_labelStyle="@style/menu_labels_style"
        app:fab_size="normal"
        app:pressedTranslationZ="12dp" />
</RelativeLayout>